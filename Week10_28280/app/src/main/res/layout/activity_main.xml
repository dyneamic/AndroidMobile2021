<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnAsyncTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Async Task"
        app:layout_constraintBottom_toTopOf="@+id/btnAsyncTaskLoader"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAsyncTaskLoader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Async Task Loader"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAsyncTask"
        app:layout_constraintBottom_toTopOf="@+id/btnSimpleIntentService"/>

    <Button
        android:id="@+id/btnSimpleIntentService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Intent Service"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAsyncTaskLoader" />

</androidx.constraintlayout.widget.ConstraintLayout>